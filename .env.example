# TNT Environment Variables
# Copy this file to .env and customize for your environment

# ============================================
# Global Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=text

# ============================================
# SIPREC Proxy Configuration
# ============================================
SIPREC_PORT=5060
SIPREC_HOST=0.0.0.0
WS_PORT=3001

# TLS Configuration (Production)
# SIPREC_TLS_ENABLED=true
# SIPREC_CERT_PATH=/etc/tnt/certs/siprec.crt
# SIPREC_KEY_PATH=/etc/tnt/certs/siprec.key

# ============================================
# Transcription Service Configuration
# ============================================
WHISPER_MODEL=base
WHISPER_MODELS_PATH=./models
API_PORT=3002
TEMP_DIR=/tmp/tnt-audio
MAX_CONCURRENT_TRANSCRIPTIONS=5
TRANSCRIPTION_TIMEOUT_MS=30000

# ============================================
# UI Configuration (Build-time)
# ============================================
VITE_WS_URL=ws://localhost:3001
VITE_API_URL=http://localhost:3002
VITE_APP_TITLE=TNT Dashboard
VITE_ENABLE_DEV_TOOLS=true

# ============================================
# Security Configuration
# ============================================
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# API_KEY_REQUIRED=false
# API_KEYS=

# ============================================
# Performance Configuration
# ============================================
MAX_MEMORY_MB=1024
WORKER_THREADS=2
# ENABLE_METRICS=false
# METRICS_PORT=9090
